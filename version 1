#include<iostream>
#include<string>
#include<string.h>
using namespace std;
int main() {
	char name[100];
	string name2;
	string greeting;
	cout << "Enter you name: ";
	fgets(name, 100, stdin);
	name2 = name;
	name2[strlen(name) - 1] = '\0';
	greeting = "Nice to meet you, " + name2 + "";

	cout << endl << greeting << "!" << endl;
}
